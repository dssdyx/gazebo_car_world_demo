<?xml version="1.0"?>
<launch>
    <!-- vehicle pose -->
    <arg name="x" default="0"/>
    <arg name="y" default="0"/>
    <arg name="z" default="0.15"/>
    <arg name="R" default="0"/>
    <arg name="P" default="0"/>
    <arg name="Y" default="0"/>

    <arg name="model" default="iris_2Dlidar_camera"/>
    <arg name="vehicle" default="iris"/>

    <param name="use_sim_time" value="true" />

    <!-- Launch PX4 SITL -->
    <include file="$(find px4)/launch/px4.launch">
        <arg name="vehicle" value="$(arg vehicle)"/>
    </include>

    <!-- Define a static transform from a camera internal frame to the fcu for every camera used -->
    <node pkg="tf" type="static_transform_publisher" name="tf_2Dlidar"
            args="0 0 0.1 -3.1415926 0 0 base_link 2Dlidar_link 10"/>

    <node pkg="tf" type="static_transform_publisher" name="tf_imu"
            args="0 0 0 0 0 0 base_link imu_link 10"/>

    <!-- Ros transformation -->
    <!-- <node pkg="tf" type="static_transform_publisher" name="tf_local_origin"
          args="0 0 0 0 0 0 world odom 10"/> -->

    <node pkg="tf" type="static_transform_publisher" name="tf_map_world"
          args="0 0 0 0 0 0 world map 10"/> 

    <!-- Spawn vehicle model -->
    <node name="spawn_model" pkg="gazebo_ros" type="spawn_model" output="screen"
          args="-sdf -database $(arg model) -model $(arg vehicle)  -x $(arg x) -y $(arg y) -z $(arg z) -R $(arg R) -P $(arg P) -Y $(arg Y)">
    </node>
    <!-- <node name="rviz" pkg="rviz" type="rviz" args="-d $(find simulation)/rviz/lidar.rviz" required="true" /> -->

</launch>

